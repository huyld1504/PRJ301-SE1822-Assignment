<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>UpdateCustomerProfileFilter</filter-name>
        <filter-class>filters.UpdateCustomerProfileFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginCustomerFilter</filter-name>
        <filter-class>filters.LoginCustomerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginMechanicFilter</filter-name>
        <filter-class>filters.LoginMechanicFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginMechanicFilter</filter-name>
        <servlet-name>LoginMechanicServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginCustomerFilter</filter-name>
        <servlet-name>LoginCustomerServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UpdateCustomerProfileFilter</filter-name>
        <servlet-name>UpdateCustomerProfileServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>controllers.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCustomerServlet</servlet-name>
        <servlet-class>controllers.LoginCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.LogoutCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCustomerProfileServlet</servlet-name>
        <servlet-class>controllers.UpdateCustomerProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginSaleServlet</servlet-name>
        <servlet-class>controllers.loginSaleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvoiceServlet_Sale</servlet-name>
        <servlet-class>controllers.InvoiceServlet_Sale</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginMechanicServlet</servlet-name>
        <servlet-class>controllers.LoginMechanicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginCustomerServlet</servlet-name>
        <url-pattern>/LoginCustomerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCustomerProfileServlet</servlet-name>
        <url-pattern>/UpdateCustomerProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginSaleServlet</servlet-name>
        <url-pattern>/loginSaleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceServlet_Sale</servlet-name>
        <url-pattern>/InvoiceServlet_Sale</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginMechanicServlet</servlet-name>
        <url-pattern>/LoginMechanicServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainServlet</welcome-file>
    </welcome-file-list>
</web-app>
